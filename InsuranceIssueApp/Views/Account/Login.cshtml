@model InsuranceIssueApp.Model.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>InsurerCover Login</title>

    <!-- Bootstrap -->
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <link href="~/css/LoginCss.css" rel="stylesheet" />

   
</head>
<body>



    <div class="container">
        <div class="login-form">
            <h1 class="title text-center">InsureCover</h1>
            <form id="login-form" method="post" class="form-signin" role="form">
                @*<input name="email" id="email" type="email" class="form-control" placeholder="Login ID" autofocus>*@
                @Html.EditorFor(model => model.LoginID, new { htmlAttributes = new { @id = "LoginId", @class = "form-control", @placeholder = "Login ID" } })
                @Html.ValidationMessageFor(model => model.LoginID, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "pwd", @class = "form-control", @placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                @*<input name="password" id="password" type="password" class="form-control disable" placeholder="Password">*@
                <button class="btn btn-block bt-login" type="submit">Sign In</button>
            </form>
            <div class="form-footer">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12" style="text-align:center">
                        <i class="fa fa-lock"></i>
                        <a href="#"> Forgot password? </a>
                    </div>
                    @*<div class="col-xs-5 col-sm-5 col-md-5">
                             <a href="#"></a>
                        </div>*@
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</body>
</html>
